<nav class="navbar navbar-expand-lg navbar-dark">
<img class="logo" src="/images/star.jpg" width="35" height="35" alt="Logo">
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
<span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
<ul class="navbar-nav mr-auto">
<li class="nav-item active">
<a class="nav-link text-right ml-3" href="/users/{{user.id}}/boards">All Boards <span class="sr-only">(current)</span></a>
</li>
</ul>
<a href="/users/{{user.id}}/profilepage"><img class="avatar-nav-k float-right" src={{user.image}} width="35" height="35" alt=""></a>
</div>
</nav>



<div class="container-fluid-s d-flex flex-column justify-center">
    <div id="all-board-container-s">
    <h4 class="text-right px-3 pt-2 mb-0"><i>Welcome {{user.name}}!</i></h4>
    <h1 class="text-center">Boards</h1>
    <div class="my-2">
        <div id="carouselExampleIndicators" class="carousel carousel-multi-item slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {{#each boards}}
                <div class="{{#if @first }} active-s active carousel-item col-md-4 {{else}} carousel-item col-md-4 clearfix {{/if}}">
                    <div class="card card-board-s d-block" style="min-height: 20rem">
                        <div class="card-body card-board-body-s">
                            <h3 class="card-title text-center">{{this.title}}</h3>
                            <image class="card-img card-board-image-s"
                                src="https://images.pexels.com/photos/268362/pexels-photo-268362.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260">
                            </image>
                            <div class="card-subtitle">
                            <h6 class="my-2 py-2 text-right">{{this.tasks.length}} tasks</h6>
                            <p class="my-2">Include avatars here!!!</p>
                                {{#each ../avatars}}
                                    <p>{{this}}</p>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                <ol class="carousel-indicators">
                    {{#each boards}}
                    <li data-target="#carouselExampleIndicators" data-slide-to="{{this.id}}"
                        class="{{#if @first}} active active-s {{/if}}"></li>
                    {{/each}}
                </ol>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>


    <button class="btn btn-j btn-secondary my-2 btn-add-board-s" onclick="createBoard()" type="button">Add Board</button>

</div>
</div>


<div class="create-board-form-s" id="createBoard-s">
    <form action="/users/{{user.id}}/boards/create" method="POST" class="create-board-container-s">
        <h4>Create New Board</h4>

        <label><br>Title:<br></label>
        <input type="text" placeholder="Board Title" name="title" required>

        <button type="submit" class="btn btn-j">Create Board</button>
        <button type="button" onclick="cancelBoard()" class="btn btn-j cancel">Cancel</button>
    </form>
</div>

<script>
    function createBoard() {
        document.getElementById("createBoard-s").style.display = "block";
        document.getElementById("all-board-container-s").style.display = "none";
    }
    function cancelBoard() {
        document.getElementById("createBoard-s").style.display = "none";
        document.getElementById("all-board-container-s").style.display = "block";
    }
    Handlebars.registerHelper('index_of', function(context,ndx) {
        return context[ndx];    
    });

</script>
